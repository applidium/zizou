%h1 Players

%table.table
  %thead
    %th Ranking
    %th Username
    %th F
    %th A
    %th GD
    %th Won
    %th Drawn
    %th Lost
    %th Played
    %th Rating
  - @players.each_with_index do |p, i|
    %tr
      %td= i+1
      %td= p.username
      %td= p.goals_scored
      %td= p.goals_conceded
      %td= p.goals_difference
      %td= p.won
      %td= p.drawn
      %td= p.lost
      %td= p.games_played
      %td= p.rating

= link_to "New player", new_player_path

